---
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";

const personne = await getCollection("personne");
---

<Layout pageTitle="Liste des personnes">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-center text-gray-900 my-6">
      Liste des personnes
    </h1>
    <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      {
        personne.map((personne) => (
          <li class="bg-white shadow-md rounded-lg p-4 text-center hover:shadow-lg transition-shadow">
            <a
              href={`./personne/${personne.id}`}
              class="text-lg font-semibold text-blue-600 hover:underline"
            >
              {personne.data.nom}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</Layout>
